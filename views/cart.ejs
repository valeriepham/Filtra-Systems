            width: 50%;
        }
    </style>
    <title>Shopping Cart</title>
</head>

<%- include('./partials/header.ejs') %>

<body>
    <% if (message.success) { %>
        <div class="alert alert-success" role="alert">
          <%= message.success %>
        </div>
      <% } %>

    <a>
        <img src="./images/process-16.png" width=1000px>
    </a>
    <div class="row">
        <div class="col-md-8">
            <table class="order">
                <% if (products != null) { %>
                    <tr>
                        <th>Items</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th></th>
                    </tr>
                    <% products.forEach(function(product) { %>
                        <tr>
                            <td class="div-td-1">
                                <img src="<%= product.item.img %>" width="50px" height="100px">
                                <%= product.item.title %>
                            </td>
                            <td class="div-td-2">
                                <%= parseInt(product.quantity, 10) %>
                            </td>
                            <td class="div-td-3">
                                $
                                <%= product.item.pricing.retail %> ea.
                            </td>
                            <td class="div-td-4">
                                $
                                <%= product.price %>
                            </td>
                            <td class="div-td-5">
                                <a href="/update-quantity/<%= product.item._id %>/-1" class="btn btn-primary">-1</a>
                                <a href="/remove-from-cart/<%= product.item._id %>" class="btn btn-danger">Remove</a>
                                <a href="/update-quantity/<%= product.item._id %>/+1" class="btn btn-primary">+1</a>

                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <h2>No items in cart</h2>
                                <% } %>
            </table>

        </div>
        <div class="col-md-4">
            <table class="order">
                <tr>
                    <th>Order Summary</th>
                    <th></th>
                </tr>
                <tr class="div-ordersummary-tr-1">
                    <td class="div-ordersummary-td-1">Subtotal</td>
                    <td class="div-ordersummary-td-2">
                        $
                        <%= totalPrice %>
                    </td>
                </tr>
                <tr>
                    <td>Estimated Shipping</td>
                    <td>$
                        <%= (totalPrice * 0.15).toFixed(2) %>
                    </td>
                </tr>
                <tr>
                    <td>Sales Tax</td>
                    <td>$
                        <%= (totalPrice * 0.0875).toFixed(2) %>
                    </td>
                </tr>
                <tr class="div-order-total">
                    <td>Total</td>
                    <td>$
                        <%= (totalPrice * 1.2375).toFixed(2) %>
                    </td>
                </tr>
            </table>
            <% if (products != null) { %>
                <a href="/simplecheckout" class="btn btn-success" style="float: right; margin-right: 50px">Checkout</a>
                <% } %>
            <% if (user) { %>
                <a href="/api/cart/save" class="btn btn-primary" style="float: right; margin-right: 50px">Save for Later</a>
            <% } %>
        </div>
    </div>
