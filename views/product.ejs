<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">

	<title><%=products[0].title%></title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
	 crossorigin="anonymous">
	<link rel="stylesheet" href="/stylesheets/navbar.css">
</head>

<%- include('./partials/header.ejs') %>

<body>
	<!-- content -->
	<div class="container mt-5 mb-3">
		<!-- body -->
		<div class="row container">
			<!-- Information -->
			<div class="col-8">
				<h1>
					<%= products[0].title %>
				</h1>
				<img class="img-thumbnail" src="../images/<%=products[0].series%>.jpg">
				<div class="card p-2 my-2">
					<h5 class="card-title">Description</h5>
					<p class="card-text">
						<%= products[0].description %>
					</p>
				</div>

			</div>
			<!-- payment -->
			<div class="col-4">

				<div class="card">
					<div class="card-body">
						<h5 class="card-title m-0">Price: $<%= products[0].pricing.retail %></h5>
					</div>

					
					<form name="product" action="/api/cart/add" method="post">
						<!-- Quantity -->
						<div class="form-group m-2">
							<label for="quantity">Quantity: </label>
							<input type="number" class="form-control" id="quantity" name="qty">
						</div>
						<!-- Model -->
						<div class="form-group m-2">
							<label for="sel1">Select list:</label>
							<select class="form-control" id="model" name="model">
								<% products.forEach(function(product) { %>
									<option>
										<%= product.model %>
									</option>
								<% }) %>
							</select>
						</div>
						<button type="submit" class="btn btn-primary m-2">Add to Cart</button>
					</form>
					<p>Or <a href="/products/<%= products[0].series %>/subscriptions">click here</a> to learn about subscriptions</p>
				</div>
			</div>
		</div>

		<!-- specs table -->
		<div class="container">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Series</th>
						<th scope="col">Model #</th>
						<th scope="col">Bag Quantity</th>
						<th scope="col">Bag Size</th>
						<th scope="col">Material</th>
						<th scope="col">Max Pressure (PSI)</th>
						<th scope="col">Connection Inlet/Outlet</th>
						<th scope="col">Connection Type</th>
					</tr>
				</thead>
				<tbody>
					<% products.forEach(function(product) { %>
						<tr>
							<th scope="col">
								<%=product.series%>
							</th>
							<th scope="col">
								<%=product.model%>
							</th>
							<th scope="col">
								<%=product.order_information.bag_quantity%>
							</th>
							<th scope="col">
								<%=product.order_information.bag_size%>
							</th>
							<th scope="col">
								<%=product.order_information.material%>
							</th>
							<th scope="col">
								<%=product.order_information.max_pressure_psi%>
							</th>
							<th scope="col">
								<%=product.order_information.connection%>
							</th>
							<th scope="col">
								<%=product.order_information.connection_type%>
							</th>
						</tr>
						<% }) %>
				</tbody>
			</table>
		</div>
	</div>

</body>
	

	<%- include('./partials/footer.ejs') %>
	
	<!-- Scripts -->
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</html>