<!DOCTYPE html>
<html>

<head>
  <title>Inventory Management</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <style type="text/css">
    body{
      padding: 50px;
    }
    .form-width{
      width:300px;
    }
  </style>
  <script>
    function check() {
      return confirm('Are you sure you want to delete this user?');
    }
  </script>  
</head>

<body>
  <%- include('../partials/admin-navbar') %>
  <% if (message.success) { %>
    <div class="alert alert-success" role="alert">
      <%=message.success%>
    </div>
  <% } %>
  <div align="center">
      <h1>Admin Panel</h1>
      <br>
  </div>

  <div class="container mt-5 mb-3">
    <h3>Product List</h3>
    <input class="form-control" type="text" id="psearch" placeholder="Search for products">
      <table class="table table-hover mt-3">
        <thead class="table-secondary table-bordered">
          <th scope="col">Product</th>
          <th scope="col">Series</th>
          <th scope="col">Model</th>
          <th class="text-center" scope="col">Retail Price</th>
          <th class="text-center" scope="col">Number in Inventory</th>
        </thead>
        <tbody id="ptable">
        <% products.forEach(function(product) { %>
            <tr>
              <td><%= product.title %></a></td>
              <td><%= product.series %></td>
              <td><a href="/admin/manage-product/<%= product.model %>" target="_blank"><%= product.model %></a></td>
              <td class="text-center">$<%= product.pricing.retail %></td>
              <td class="text-center"><%= product.qty %></td>
            </tr>
        <% })%>
        </tbody>
      </table>
    </div>
  
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script>
    $(document).ready(function(){
      $("#psearch").on("keyup", function() {
        let value = $(this).val().toLowerCase();
        $("#ptable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>
</body>

</html>