<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/stylesheets/catalog.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">  
  <title>Product Catalog</title>
</head>

<body>
  <div class="header">
    HEADER
    <div class="navbar">
      NAVBAR
    </div>
  </div>
  <div class="jumbotron">
    JUMBOTRON
  </div>
  <div class="content container">
    CONTENT
    <div class="selection">
      SELECTION PANE
      <div class="search">
        <form>
          <button class="icon"><i class="fa fa-search"></i></button>
          <input type="search" name="search" id="searchbar" placeholder="Search..." />
        </form>
      </div>
      <div class="filter">
        FILTERING
        <ul class="categories">
          <li>Category 1</li>
          <ul class="filters">
            <li>Filter 1.1</li>
            <li>Filter 1.2</li>
            <li>Filter 1.3</li>
          </ul>
          <li>Category 2</li>
          <ul class="filters">
            <li>Filter 2.1</li>
            <li>Filter 2.2</li>
            <li>Filter 2.3</li>
          </ul>
          <li>Category 3</li>
          <ul class="filters">
            <li>Filter 3.1</li>
            <li>Filter 3.2</li>
            <li>Filter 3.3</li>
          </ul>
        </ul>
      </div>
    </div>
    <div class="product-listing">
      LISTING
      <% products.forEach(function(product){ %>
        <a href="products/<%= product %>"><div class="product">
          <%= product %>
        </div></a>
      <%}) %>
    </div>
  </div>
  <div class="footer">
    footer
  </div>

</body>

</html>